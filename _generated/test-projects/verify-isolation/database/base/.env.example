# MongoDB Configuration
MONGO_PORT=27017
MONGO_USERNAME=admin
MONGO_PASSWORD=secure_password_here
MONGO_DATABASE={{PROJECT_NAME}}

# Application User (created by init script)
MONGO_APP_USER={{PROJECT_NAME}}_app
MONGO_APP_PASSWORD=app_secure_password_here

# MongoDB Express (Development Only)
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=secure_password_here

# Connection Strings
# For application use:
MONGODB_URI=mongodb://{{PROJECT_NAME}}_app:app_secure_password_here@localhost:27017/{{PROJECT_NAME}}

# For admin use:
MONGODB_ADMIN_URI=mongodb://admin:secure_password_here@localhost:27017/{{PROJECT_NAME}}?authSource=admin

# With replica set (production):
# MONGODB_URI=mongodb://user:pass@host1:27017,host2:27017,host3:27017/{{PROJECT_NAME}}?replicaSet=rs0&authSource=admin

# MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/{{PROJECT_NAME}}?retryWrites=true&w=majority

# Sample data creation (development only)
CREATE_SAMPLE_DATA=false