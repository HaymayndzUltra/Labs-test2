{
  "$schema": "https://tokens.studio/schemas/1.0.0/tokens.schema.json",
  "color": {
    "bg": {
      "default": { "value": "{colors.neutral.50}" },
      "surface": { "value": "{colors.base.white}" },
      "inverted": { "value": "{colors.neutral.900}" }
    },
    "text": {
      "default": { "value": "{colors.neutral.800}" },
      "muted": { "value": "{colors.neutral.600}" },
      "inverted": { "value": "{colors.base.white}" },
      "link": { "value": "{colors.primary.600}" }
    },
    "border": {
      "subtle": { "value": "{colors.neutral.200}" },
      "default": { "value": "{colors.neutral.300}" },
      "focus": { "value": "{colors.primary.600}" }
    },
    "action": {
      "primary": { "value": "{colors.primary.600}" },
      "primaryHover": { "value": "{colors.primary.700}" },
      "primaryActive": { "value": "{colors.primary.800}" },
      "danger": { "value": "{colors.danger.500}" }
    },
    "states": {
      "success": { "value": "{colors.success.500}" },
      "warning": { "value": "{colors.warning.500}" },
      "danger": { "value": "{colors.danger.500}" }
    }
  },
  "typography": {
    "body": {
      "default": {
        "fontFamily": { "value": "{typography.fontFamilies.sans}" },
        "fontSize": { "value": "{typography.fontSizes.200}" },
        "lineHeight": { "value": "{typography.lineHeights.normal}" },
        "fontWeight": { "value": "{typography.fontWeights.regular}" }
      }
    },
    "button": {
      "label": {
        "fontFamily": { "value": "{typography.fontFamilies.sans}" },
        "fontSize": { "value": "{typography.fontSizes.200}" },
        "lineHeight": { "value": "{typography.lineHeights.tight}" },
        "fontWeight": { "value": "{typography.fontWeights.semibold}" }
      }
    }
  },
  "radius": {
    "control": { "value": "{radii.md}" }
  },
  "a11y": {
    "focusRing": {
      "width": { "value": "2px" },
      "color": { "value": "{color.border.focus}" }
    },
    "target": {
      "minSize": { "value": "44px" }
    }
  }
}
